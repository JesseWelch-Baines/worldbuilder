<% if @articles.any? %>
  <div class="flex flex-row justify-center">
    <div class="p-2 w-1/2 bg-gray-300 rounded-sm">
      <% @articles.each do |article| %>
        <%= render ListItemComponent.new(item: article, index: 0, count: @articles.size, links: item_list_links(article)) %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="flex flex-row justify-center">
  <div class="pt-5 w-1/2">
    <%= link_to "New article", new_article_category_article_path(@article_category), class: "button" %>
  </div>
</div>
