<div class="pb-5">
  <%= render partial: "layouts/title_panel", locals: { title: "Article Categories" } %>
</div>

<% if @article_categories.any? %>
  <div class="flex flex-row justify-center">
    <div class="p-2 w-1/2 bg-gray-300 rounded-sm">
      <% @article_categories.each do |article_category| %>
        <%= render ListItemComponent.new(item: article_category, index: 0, count: @article_categories.size, links: item_list_links(article_category)) %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="flex flex-row justify-center">
  <div class="pt-5 w-1/2">
    <%= link_to "New article category", new_article_category_path, class: "button" %>
  </div>
</div>
