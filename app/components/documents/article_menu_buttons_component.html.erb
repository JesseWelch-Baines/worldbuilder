<div x-cloak="" x-show="showPanel" class="flex flex-row justify-center w-full">
  <div class="flex flex-row justify-between py-2 w-72 text-gray-700 bg-gray-200 rounded-sm border border-gray-100 divide-x-2">
    <span @click="showParagraphList = true" title="Add paragraph" class="px-4 cursor-pointer hover:text-blue-400">
      <i class="fas fa-fw fa-scroll">
    </span>
    <span @click="showArticleList = true; $nextTick(() => document.getElementById('character_filter_dropdown_#{@order}').focus());" title="Add character" class="px-4 cursor-pointer hover:text-blue-400">
      <i class="fas fa-fw fa-running">
    </span>
  </div>
</div>
